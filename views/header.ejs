<% if ( flash.length > 0 && flash!='[object Object]') { %>
	<div class="alert">
		<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		<strong><%= flash%> </strong>
	  </div>
<% } %>
<% if ( success.length > 0  && success!='[object Object]') { %>
	<div class="success">
		<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		<strong><%= success%> </strong>
	  </div>
<% } %>
<ul>
	<% for(var mycard of content){ %>
		<div class="card">
			<div class="container">
			   <h3><b><%= mycard.title %> </b></h3>
			   <h5><%= mycard.author %>  <span class="w3-opacity"><%= mycard.date %></span></h5>
			 </div>

			 <div class="container">
				<p><%= mycard.sdesc %> </p>
			 <div class="row">
					
					 <form action="http://localhost:8000/blog/<%= mycard._id %> "  method="GET">
							<button type="submit" class="button">Read More</button>
					 </form>
				  
			  </div>
			</div>
		</div>
	<% } %>
</ul>